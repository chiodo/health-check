<p id="notice"><%= notice %></p>

<h1>Clusters</h1>

<table class="table table-sm">
  <thead>
    <tr>
      <th>Name</th>
      <th>Ok?</th>
    </tr>
  </thead>

  <tbody>
    <% @clusters.each do |cluster| %>
      <tr class="<%= cluster.healthy? ? 'table-success' : 'table-danger'%>">
        <td><%= link_to cluster.name, cluster %></td>
        <td><%= cluster.healthy?%></td>
      </tr>
    <% end %>
  </tbody>
</table>

